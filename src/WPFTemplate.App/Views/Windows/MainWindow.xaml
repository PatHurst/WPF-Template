<Window
    x:Class="InnoJob.App.Views.Windows.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:InnoJob.App"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:InnoJob.App.ViewModels"
    Title="InnoJob"
    MinWidth="800"
    MinHeight="400"
    DataContext="{StaticResource MainWindowViewModel}"
    Style="{StaticResource WindowStyle}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Window.Resources>
        <vm:MenuViewModel x:Key="MenuViewModel" />
    </Window.Resources>

    <DockPanel>

        <!--  Main Menu  -->
        <Menu DataContext="{StaticResource MenuViewModel}" DockPanel.Dock="Top">
            <MenuItem Header="File" />
            <MenuItem Header="Settings">
                <MenuItem Header="Choose Theme Color" ItemsSource="{Binding SetAccentColorCommands}">
                    <MenuItem.ItemContainerStyle>
                        <Style BasedOn="{StaticResource {x:Type MenuItem}}" TargetType="MenuItem">
                            <Setter Property="Command" Value="{Binding}" />
                            <Setter Property="Icon" Value="{Binding Icon}" />
                            <Setter Property="Header" Value="{Binding Header}" />
                        </Style>
                    </MenuItem.ItemContainerStyle>
                </MenuItem>
                <MenuItem Header="Set Theme">
                    <MenuItem Command="{Binding SetLightThemeCommand}" Header="Light" />
                    <MenuItem Command="{Binding SetDarkThemeCommand}" Header="Dark" />
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Help" />
        </Menu>

        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem Content="{Binding StatusText}" />
        </StatusBar>

        <Grid>
            <StackPanel>
                <Button Content="Foo" />
                <CheckBox Content="bar" />
                <ListBox>
                    <TextBlock Text="Foo" />
                </ListBox>
            </StackPanel>
        </Grid>

    </DockPanel>
</Window>
