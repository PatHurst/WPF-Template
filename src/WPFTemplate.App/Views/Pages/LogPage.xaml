<UserControl
    x:Class="WPFTemplate.App.Views.Pages.LogPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <StackPanel
        Width="480"
        HorizontalAlignment="Center"
        VerticalAlignment="Center">

        <TextBlock
            Margin="0,0,0,16"
            FontSize="{StaticResource FontSizeLarge}"
            Text="Log Demo" />

        <!--  Output display  -->
        <TextBox
            Height="140"
            Margin="0,0,0,12"
            AcceptsReturn="True"
            FontFamily="Consolas"
            IsReadOnly="True"
            Text="{Binding Output, Mode=OneWay}"
            VerticalScrollBarVisibility="Auto" />

        <!--  Log-level buttons  -->
        <StackPanel
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Margin="0,0,8,0"
                Command="{Binding LogInfoCommand}"
                Content="Log Info" />
            <Button
                Margin="0,0,8,0"
                Command="{Binding LogWarnCommand}"
                Content="Log Warning" />
            <Button
                Command="{Binding LogErrorCommand}"
                Content="Log Error" />
        </StackPanel>

        <Button
            Margin="0,16,0,0"
            HorizontalAlignment="Left"
            Command="{Binding GoHomeCommand}"
            Content="â† Back to Home" />

    </StackPanel>
</UserControl>
