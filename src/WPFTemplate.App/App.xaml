<Application
    x:Class="WPFTemplate.App.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:WPFTemplate.App.ViewModels"
    xmlns:pages="clr-namespace:WPFTemplate.App.Views.Pages"
    Exit="Application_Exit"
    Startup="Application_Startup">
    <Application.Resources>
        <ResourceDictionary>

            <!--  Page â†’ View mappings for ViewModel-first navigation  -->
            <DataTemplate DataType="{x:Type vm:HomePageViewModel}">
                <pages:HomePage />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:LogPageViewModel}">
                <pages:LogPage />
            </DataTemplate>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Theme/Colors.Light.xaml" />
                <ResourceDictionary Source="/Resources/Theme/Controls.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
