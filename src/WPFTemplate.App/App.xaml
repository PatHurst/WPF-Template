<Application
    x:Class="InnoJob.App.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:InnoJob.App"
    xmlns:windowvm="clr-namespace:InnoJob.App.ViewModels.WindowViewModels"
    Exit="Application_Exit"
    Startup="Application_Startup">
    <Application.Resources>
        <ResourceDictionary>
            <windowvm:MainWindowViewModel x:Key="MainWindowViewModel" />

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Theme/Colors.Light.xaml" />
                <ResourceDictionary Source="/Resources/Theme/Controls.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
