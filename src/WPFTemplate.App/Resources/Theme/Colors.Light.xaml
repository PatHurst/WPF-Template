<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ═══════════════════════════════════════════════════
         LIGHT THEME — Clean, Classic, Slightly Warm
    ════════════════════════════════════════════════════ -->

    <!-- Window / Shell -->
    <SolidColorBrush x:Key="WindowBackground"         Color="#F0F0F0"/>
    <SolidColorBrush x:Key="WindowBorder"             Color="#AAAAAA"/>

    <!-- Sidebar / Panel -->
    <SolidColorBrush x:Key="SidebarBackground"        Color="#E8E8E8"/>
    <SolidColorBrush x:Key="SidebarBorder"            Color="#CCCCCC"/>
    <SolidColorBrush x:Key="SidebarItemHover"         Color="#DADADA"/>
    <SolidColorBrush x:Key="SidebarItemSelected"      Color="#D0D0D0"/>

    <!-- Title Bar -->
    <SolidColorBrush x:Key="TitleBarBackground"       Color="#E0E0E0"/>
    <SolidColorBrush x:Key="TitleBarForeground"       Color="#1A1A1A"/>
    <SolidColorBrush x:Key="TitleBarButtonHover"      Color="#CCCCCC"/>
    <SolidColorBrush x:Key="TitleBarButtonClose"      Color="#C42B1C"/>

    <!-- Menu Bar -->
    <SolidColorBrush x:Key="MenuBackground"           Color="#F0F0F0"/>
    <SolidColorBrush x:Key="MenuBorder"               Color="#CCCCCC"/>
    <SolidColorBrush x:Key="MenuItemBackground"       Color="Transparent"/>
    <SolidColorBrush x:Key="MenuItemHover"            Color="#DCDCDC"/>
    <SolidColorBrush x:Key="MenuItemForeground"       Color="#1A1A1A"/>
    <SolidColorBrush x:Key="MenuSeparator"            Color="#CCCCCC"/>
    <SolidColorBrush x:Key="SubMenuBackground"        Color="#FAFAFA"/>
    <SolidColorBrush x:Key="SubMenuBorder"            Color="#BBBBBB"/>

    <!-- Toolbar / Breadcrumb -->
    <SolidColorBrush x:Key="ToolbarBackground"        Color="#EBEBEB"/>
    <SolidColorBrush x:Key="ToolbarBorder"            Color="#CCCCCC"/>
    <SolidColorBrush x:Key="BreadcrumbForeground"     Color="#444444"/>
    <SolidColorBrush x:Key="BreadcrumbSeparator"      Color="#999999"/>

    <!-- Content Area -->
    <SolidColorBrush x:Key="ContentBackground"        Color="#FAFAFA"/>
    <SolidColorBrush x:Key="ContentBorder"            Color="#CCCCCC"/>

    <!-- List / Grid -->
    <SolidColorBrush x:Key="ListBackground"           Color="#FAFAFA"/>
    <SolidColorBrush x:Key="ListItemBackground"       Color="Transparent"/>
    <SolidColorBrush x:Key="ListItemHover"            Color="#EBEBEB"/>
    <SolidColorBrush x:Key="ListItemSelected"         Color="#DDE8F5"/>
    <SolidColorBrush x:Key="ListItemSelectedFocus"    Color="#CCE0F5"/>
    <SolidColorBrush x:Key="ListHeaderBackground"     Color="#EFEFEF"/>
    <SolidColorBrush x:Key="ListHeaderBorder"         Color="#D0D0D0"/>
    <SolidColorBrush x:Key="ListHeaderForeground"     Color="#555555"/>
    <SolidColorBrush x:Key="ListSeparator"            Color="#E0E0E0"/>
    <SolidColorBrush x:Key="ListGridLine"             Color="#EBEBEB"/>

    <!-- Status Bar -->
    <SolidColorBrush x:Key="StatusBarBackground"      Color="#E4E4E4"/>
    <SolidColorBrush x:Key="StatusBarForeground"      Color="#555555"/>
    <SolidColorBrush x:Key="StatusBarBorder"          Color="#CCCCCC"/>

    <!-- Text -->
    <SolidColorBrush x:Key="TextPrimary"              Color="#1A1A1A"/>
    <SolidColorBrush x:Key="TextSecondary"            Color="#555555"/>
    <SolidColorBrush x:Key="TextDisabled"             Color="#AAAAAA"/>
    <SolidColorBrush x:Key="TextOnAccent"             Color="#FFFFFF"/>

    <!-- Controls -->
    <SolidColorBrush x:Key="ControlBackground"        Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ControlBorder"            Color="#AAAAAA"/>
    <SolidColorBrush x:Key="ControlHover"             Color="#F5F5F5"/>
    <SolidColorBrush x:Key="ControlPressed"           Color="#E0E0E0"/>
    <SolidColorBrush x:Key="ControlDisabled"          Color="#F0F0F0"/>
    <SolidColorBrush x:Key="ControlDisabledBorder"    Color="#D0D0D0"/>

    <!-- Scrollbar -->
    <SolidColorBrush x:Key="ScrollbarTrack"           Color="#F0F0F0"/>
    <SolidColorBrush x:Key="ScrollbarThumb"           Color="#BBBBBB"/>
    <SolidColorBrush x:Key="ScrollbarThumbHover"      Color="#999999"/>
    <SolidColorBrush x:Key="ScrollbarThumbPressed"    Color="#808080"/>

    <!-- Input -->
    <SolidColorBrush x:Key="InputBackground"          Color="#FFFFFF"/>
    <SolidColorBrush x:Key="InputBorder"              Color="#AAAAAA"/>
    <SolidColorBrush x:Key="InputForeground"          Color="#1A1A1A"/>
    <SolidColorBrush x:Key="InputPlaceholder"         Color="#AAAAAA"/>

    <!-- Tooltip -->
    <SolidColorBrush x:Key="TooltipBackground"        Color="#FFFFCC"/>
    <SolidColorBrush x:Key="TooltipBorder"            Color="#888888"/>
    <SolidColorBrush x:Key="TooltipForeground"        Color="#1A1A1A"/>

    <!-- Section Headers (sidebar groups) -->
    <SolidColorBrush x:Key="GroupHeaderForeground"    Color="#888888"/>

    <!-- Overlay / Modal -->
    <SolidColorBrush x:Key="OverlayBackground"        Color="#60000000"/>

    <!-- Focus ring -->
    <SolidColorBrush x:Key="FocusBorder"              Color="#3070C0"/>

</ResourceDictionary>
