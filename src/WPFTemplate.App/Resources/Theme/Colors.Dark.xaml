<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--
        ═══════════════════════════════════════════════════
        DARK THEME — Soft Gray, Not Pitch Black
        ════════════════════════════════════════════════════
    -->

    <!--  Window / Shell  -->
    <SolidColorBrush x:Key="WindowBackground" Color="#2B2B2B" />
    <SolidColorBrush x:Key="WindowBorder" Color="#1E1E1E" />

    <!--  Sidebar / Panel  -->
    <SolidColorBrush x:Key="SidebarBackground" Color="#252525" />
    <SolidColorBrush x:Key="SidebarBorder" Color="#1C1C1C" />
    <SolidColorBrush x:Key="SidebarItemHover" Color="#333333" />
    <SolidColorBrush x:Key="SidebarItemSelected" Color="#3A3A3A" />

    <!--  Title Bar  -->
    <SolidColorBrush x:Key="TitleBarBackground" Color="#222222" />
    <SolidColorBrush x:Key="TitleBarForeground" Color="#E0E0E0" />
    <SolidColorBrush x:Key="TitleBarButtonHover" Color="#3A3A3A" />
    <SolidColorBrush x:Key="TitleBarButtonClose" Color="#C42B1C" />

    <!--  Menu Bar  -->
    <SolidColorBrush x:Key="MenuBackground" Color="#2B2B2B" />
    <SolidColorBrush x:Key="MenuBorder" Color="#1E1E1E" />
    <SolidColorBrush x:Key="MenuItemBackground" Color="Transparent" />
    <SolidColorBrush x:Key="MenuItemHover" Color="#3D3D3D" />
    <SolidColorBrush x:Key="MenuItemForeground" Color="#DDDDDD" />
    <SolidColorBrush x:Key="MenuSeparator" Color="#404040" />
    <SolidColorBrush x:Key="SubMenuBackground" Color="#303030" />
    <SolidColorBrush x:Key="SubMenuBorder" Color="#1E1E1E" />

    <!--  Toolbar / Breadcrumb  -->
    <SolidColorBrush x:Key="ToolbarBackground" Color="#2E2E2E" />
    <SolidColorBrush x:Key="ToolbarBorder" Color="#1E1E1E" />
    <SolidColorBrush x:Key="BreadcrumbForeground" Color="#AAAAAA" />
    <SolidColorBrush x:Key="BreadcrumbSeparator" Color="#666666" />

    <!--  Content Area  -->
    <SolidColorBrush x:Key="ContentBackground" Color="#2B2B2B" />
    <SolidColorBrush x:Key="ContentBorder" Color="#1E1E1E" />

    <!--  List / Grid  -->
    <SolidColorBrush x:Key="ListBackground" Color="#2B2B2B" />
    <SolidColorBrush x:Key="ListItemBackground" Color="Transparent" />
    <SolidColorBrush x:Key="ListItemHover" Color="#363636" />
    <SolidColorBrush x:Key="ListItemSelected" Color="#3D3D3D" />
    <SolidColorBrush x:Key="ListItemSelectedFocus" Color="#404040" />
    <SolidColorBrush x:Key="ListHeaderBackground" Color="#252525" />
    <SolidColorBrush x:Key="ListHeaderBorder" Color="#1E1E1E" />
    <SolidColorBrush x:Key="ListHeaderForeground" Color="#AAAAAA" />
    <SolidColorBrush x:Key="ListSeparator" Color="#333333" />
    <SolidColorBrush x:Key="ListGridLine" Color="#303030" />

    <!--  Status Bar  -->
    <SolidColorBrush x:Key="StatusBarBackground" Color="#222222" />
    <SolidColorBrush x:Key="StatusBarForeground" Color="#888888" />
    <SolidColorBrush x:Key="StatusBarBorder" Color="#1A1A1A" />

    <!--  Text  -->
    <SolidColorBrush x:Key="TextPrimary" Color="#E2E2E2" />
    <SolidColorBrush x:Key="TextSecondary" Color="#AAAAAA" />
    <SolidColorBrush x:Key="TextDisabled" Color="#555555" />
    <SolidColorBrush x:Key="TextOnAccent" Color="#FFFFFF" />

    <!--  Controls  -->
    <SolidColorBrush x:Key="ControlBackground" Color="#383838" />
    <SolidColorBrush x:Key="ControlBorder" Color="#505050" />
    <SolidColorBrush x:Key="ControlHover" Color="#424242" />
    <SolidColorBrush x:Key="ControlPressed" Color="#2E2E2E" />
    <SolidColorBrush x:Key="ControlDisabled" Color="#303030" />
    <SolidColorBrush x:Key="ControlDisabledBorder" Color="#3A3A3A" />

    <!--  Scrollbar  -->
    <SolidColorBrush x:Key="ScrollbarTrack" Color="#252525" />
    <SolidColorBrush x:Key="ScrollbarThumb" Color="#505050" />
    <SolidColorBrush x:Key="ScrollbarThumbHover" Color="#686868" />
    <SolidColorBrush x:Key="ScrollbarThumbPressed" Color="#787878" />

    <!--  Input  -->
    <SolidColorBrush x:Key="InputBackground" Color="#323232" />
    <SolidColorBrush x:Key="InputBorder" Color="#505050" />
    <SolidColorBrush x:Key="InputForeground" Color="#E2E2E2" />
    <SolidColorBrush x:Key="InputPlaceholder" Color="#666666" />

    <!--  Tooltip  -->
    <SolidColorBrush x:Key="TooltipBackground" Color="#3C3C3C" />
    <SolidColorBrush x:Key="TooltipBorder" Color="#555555" />
    <SolidColorBrush x:Key="TooltipForeground" Color="#E2E2E2" />

    <!--  Section Headers (sidebar groups)  -->
    <SolidColorBrush x:Key="GroupHeaderForeground" Color="#888888" />

    <!--  Overlay / Modal  -->
    <SolidColorBrush x:Key="OverlayBackground" Color="#80000000" />

    <!--  Focus ring  -->
    <SolidColorBrush x:Key="FocusBorder" Color="#5090D0" />

</ResourceDictionary>
